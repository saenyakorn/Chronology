<?xml version="1.0" encoding="UTF-8"?>

<?import component.layouts.workspace.Workspace?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
      fx:controller="application.layout.mainController">

    <!-- Navigation Bar (static elements) -->
    <AnchorPane fx:id="navigationBar">
        <MenuBar AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0">
            <Menu text="File">
                <MenuItem text="New Document" onAction="#handleNewDocumentClick"/>
            </Menu>
            <Menu text="Add">
                <MenuItem text="Storyline" onAction="#handleNewStoryLineClick"/>
                <MenuItem text="Event Card" onAction="#handleNewEventCardClick"/>
                <MenuItem text="Chapter" onAction="#handleNewChapterClick"/>
                <MenuItem text="Comment"/>
            </Menu>
        </MenuBar>
    </AnchorPane>

    <!-- Workspace zone (dynamic elements) -->
    <Workspace fx:id="workspace"/>

</VBox>
