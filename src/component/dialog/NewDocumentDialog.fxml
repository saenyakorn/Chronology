<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="20">
    <padding>
        <Insets topRightBottomLeft="50"/>
    </padding>

    <Text text="Create New Document" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    <Label text="Document Name: "/>
    <TextField fx:id="textField"/>
    <HBox alignment="BOTTOM_RIGHT" spacing="20">
        <Button fx:id="cancelButton" text="Cancel"/>
        <Button fx:id="createButton" text="Create"/>
    </HBox>

</VBox>
