<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx" styleClass="set-color-body" fx:id="root">

    <VBox alignment="BASELINE_CENTER">
        <Text text="Edit Color" styleClass="header"/>
    </VBox>

    <VBox styleClass="container">
        <ColorPicker fx:id="colorPicker" styleClass="color-picker"/>
    </VBox>

    <HBox alignment="BOTTOM_RIGHT" spacing="20">
        <Button fx:id="cancelButton" text="Cancel" styleClass="cancel-button"/>
        <Button fx:id="setButton" text="Set" styleClass="set-button"/>
    </HBox>

</VBox>
