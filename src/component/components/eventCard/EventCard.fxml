<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" xmlns="http://javafx.com/javafx/10.0.2-internal">
    <stylesheets>
        <URL value="@EventCard.css"/>
    </stylesheets>

    <VBox prefWidth="200.0" fillWidth="false">
        <HBox id="dateTimeContainer" fx:id="dateTimeContainer" prefHeight="30.0">
            <Text id="date" fx:id="date"/>
            <Text id="time" fx:id="time"/>
        </HBox>

        <VBox id="card" styleClass="eventCard">
            <StackPane id="cardTitleContainer" fx:id="cardTitleContainer"
                       prefWidth="200.0" prefHeight="50.0" alignment="CENTER_LEFT">
                <TextField id="cardTitle" fx:id="cardTitle" prefWidth="170"/>
            </StackPane>
            <StackPane id="cardDescriptionContainer" fx:id="cardDescriptionContainer" prefWidth="200.0"
                       prefHeight="85.0" layoutY="50.0" alignment="TOP_LEFT">
                <TextArea id="cardDescription" fx:id="cardDescription" prefWidth="170" wrapText="true"/>
            </StackPane>
            <StackPane id="chapterMarker" fx:id="chapterMarker" prefWidth="200.0" prefHeight="15.0"/>
        </VBox>
    </VBox>

</Pane>
