<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<fx:root type="Pane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@EventCard.css"/>
    </stylesheets>

    <VBox prefWidth="200.0" fillWidth="false">
        <HBox id="date-time" prefHeight="30.0" alignment="BASELINE_LEFT">
            <Text id="date" text="28 FEB 2020"/>
            <Text id="time" text="NOON"/>
        </HBox>

        <VBox id="card">
            <StackPane id="card-title" prefWidth="200.0" prefHeight="50.0" alignment="CENTER_LEFT">
                <Text text="Title"/>
            </StackPane>
            <StackPane id="card-description" prefWidth="200.0" prefHeight="100.0" layoutY="50.0" alignment="TOP_LEFT">
                <Text text="Description" />
            </StackPane>
        </VBox>
    </VBox>
    
</fx:root>
